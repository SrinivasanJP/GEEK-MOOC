<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Basic_Info"
    android:background="@color/background_dark">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Basic Information"
        android:textSize="35sp"
        android:textColor="@color/text_white_glow"
        android:id="@+id/infolable1"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="It seems you are new to GEEK MOOC"
        android:id="@+id/infolable2"
        android:textColor="@color/text_white"
        android:textSize="12sp"
        android:layout_below="@+id/infolable1"
        android:layout_marginStart="20dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameContainer"
        android:layout_below="@+id/infolable2"
        android:layout_centerInParent="true"
        android:background="@drawable/curve_box"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        app:startIconDrawable="@drawable/ic_baseline_person_24"
        app:boxBackgroundMode="filled"
        app:hintTextColor="@color/black"
        app:boxStrokeColor="#00000000"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:background="@drawable/curve_box"
            android:hint="Enter your Name"
            android:textColor="@color/background_dark"
            android:autofillHints="name"
            android:inputType="text"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mobileContainer"
        android:layout_below="@+id/nameContainer"
        android:layout_centerInParent="true"
        android:background="@drawable/curve_box"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        app:startIconDrawable="@drawable/baseline_call_24"
        app:boxBackgroundMode="filled"
        app:hintTextColor="@color/black"
        app:boxStrokeColor="#00000000"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mobile"
            android:background="@drawable/curve_box"
            android:hint="Enter your Mobile No."
            android:textColor="@color/background_dark"
            android:autofillHints="phone"
            android:inputType="text"/>

    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select labels based on your intrest"
        android:textColor="@color/text_white_glow"
        android:id="@+id/basketlable"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/mobileContainer"
        android:layout_marginStart="20dp"/>

    <RelativeLayout
        android:id="@+id/basketContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/basketlable"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp">

        <CheckBox
            android:layout_width="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="30dp"
            android:background="@drawable/basket_selector"
            android:button="@drawable/basket_selector"
            android:id="@+id/programming"
            android:text="Programming"
            android:textStyle="bold"
            android:textColor="@color/background_dark"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/programming"
            android:layout_marginStart="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="30dp"
            android:background="@drawable/basket_selector"
            android:button="@drawable/basket_selector"
            android:id="@+id/media"
            android:text="Media"
            android:textStyle="bold"
            android:textColor="@color/background_dark"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_below="@+id/programming"
            android:layout_marginTop="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="30dp"
            android:background="@drawable/basket_selector"
            android:button="@drawable/basket_selector"
            android:id="@+id/datascience"
            android:text="Data Science"
            android:textStyle="bold"
            android:textColor="@color/background_dark"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/media"
            android:layout_marginStart="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="30dp"
            android:background="@drawable/basket_selector"
            android:button="@drawable/basket_selector"
            android:id="@+id/iot"
            android:text="IoT"
            android:textStyle="bold"
            android:textColor="@color/background_dark"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/datascience"
            android:layout_below="@id/media"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="30dp"
            android:background="@drawable/basket_selector"
            android:button="@drawable/basket_selector"
            android:id="@+id/science"
            android:text="Science"
            android:textStyle="bold"
            android:textColor="@color/background_dark"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/science"
            android:layout_below="@id/iot"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="30dp"
            android:background="@drawable/basket_selector"
            android:button="@drawable/basket_selector"
            android:id="@+id/ml"
            android:text="ML"
            android:textStyle="bold"
            android:textColor="@color/background_dark"/>


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_below="@id/datascience"
            android:layout_marginTop="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="30dp"
            android:background="@drawable/basket_selector"
            android:button="@drawable/basket_selector"
            android:id="@+id/business"
            android:text="Business"
            android:textStyle="bold"
            android:textColor="@color/background_dark"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/business"
            android:layout_below="@id/science"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="30dp"
            android:background="@drawable/basket_selector"
            android:button="@drawable/basket_selector"
            android:id="@+id/ai"
            android:text="AI"
            android:textStyle="bold"
            android:textColor="@color/background_dark"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/ai"
            android:layout_below="@id/ml"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="30dp"
            android:background="@drawable/basket_selector"
            android:button="@drawable/basket_selector"
            android:id="@+id/android"
            android:text="Android Dev"
            android:textStyle="bold"
            android:textColor="@color/background_dark"/>



    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submitBasicBtn"
        android:layout_below="@+id/basketContainer"
        android:layout_centerInParent="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/curve_box"
        >

        <TextView
            android:id="@+id/BtnLoginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Submit"
            android:textColor="@color/purple_500"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/Progressbarbasic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:visibility="invisible" />
    </RelativeLayout>
    </RelativeLayout>



